<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding name="StreamedBinding"
						 transferMode="Streamed"
						 maxReceivedMessageSize="10485760"
						 maxBufferSize="10485760"
						 maxBufferPoolSize="524288">
					<readerQuotas maxDepth="64" maxStringContentLength="10485760"
								  maxArrayLength="10485760" maxBytesPerRead="4096"
								  maxNameTableCharCount="16384" />
					<security mode="None" />
				</binding>
			</netTcpBinding>
		</bindings>

		<client>
			<endpoint address="net.tcp://localhost:9001/Charging"
					  binding="netTcpBinding"
					  bindingConfiguration="StreamedBinding"
					  contract="Common.IChargingService"
					  name="ChargingEndpoint" />
		</client>
	</system.serviceModel>
</configuration>
